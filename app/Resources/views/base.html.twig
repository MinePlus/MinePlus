<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}MinePlus{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('css/flat-ui.css') }}" />
            <link rel="stylesheet/less" type="text/css" href="{{ asset('less/stylesheet.less') }}" />
        {% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/less.js') }}"></script>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body class="{% block body_class %}{% endblock %}">
        {% block body %}
            {% block navbar %}
                <div class="navbar {% if config.navbar.inverse %}navbar-inverse{% endif %}">
                    <div class="navbar-inner {% if config.navbar.rounded_borders == false%}no-rounded-borders{% endif %}">
                        <div class="container">
                            <div class="nav-collapse collapse">
                                <ul class="nav">
                                    <li><a hreF="{{ path('dashboard') }}">Dashboard</a></li>
                                </ul>
                                <ul class="nav pull-right">
                                    {% if is_granted('ROLE_USER') %}
                                        <li>
                                            <a href="#fakelink">
                                                {{ app.user.username }}
                                            </a>
                                            <ul>
                                                <li><a href="{{ path('logout') }}">Logout</a></li>
                                            </ul>
                                        </li>
                                    {% else %}
                                        <li><a href="{{ path('login') }}">Login</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
            {% block content %}
            {% endblock %}
        {% endblock %}
    </body>
</html>
