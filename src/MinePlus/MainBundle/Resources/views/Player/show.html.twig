{% extends "::base.html.twig" %}

{% block title %}{{ user.username }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            {{ avatar(user.username, 128)|raw }}
            <div class="panel margin-top-little">
            </div>
        </div>
        <div class="col-md-9">
            {% for post in user.wall.posts %}
                {% if loop.index % 2 == 1 %}
                    <div class="row">
                {% endif %}
                
                <div class="col-md-6 margin-top-little">
                    {% include 'MinePlusMainBundle:Player:wall_post.html.twig'  with {'post': post} only %}
                </div>
                            
                {% if loop.index % 2 == 0 %}
                    </div>
                {% endif %}               
            {% endfor %}
        </div>
    </div>
{% endblock %}