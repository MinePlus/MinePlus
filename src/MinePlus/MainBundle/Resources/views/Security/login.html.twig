{% extends "::base.html.twig" %}

{% block title %}Login{% endblock %}

{% block styles %}
    .login-panel {
        {# Not very pretty, especially for mobile devices #}
        margin-top: 70px;
    }
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-4 col-offset-4">
            <div class="login-panel panel {% if error %}panel-danger{% endif %}">
                <div class="panel-heading">
                        <h3 class="panel-title">Login{% if error %} <small>Please try again</small>{% endif %}</h3>
                </div>
                <form action="{{ path('login_check') }}" method="post">
                    <div class="form-group">
                        <label for="input-username">Username</label>
                        <input type="text" name="_username" class="form-control" id="input-username" placeholder="Enter username" value="{{ last_username }}" />
                    </div>
                    <div class="form-group">
                        <label for="input-password">Password</label>
                        <input type="password" name="_password" class="form-control" id="input-password" placeholder="Password" />
                    </div>
                    
                    {#
                    There is a bug when pulling the button to the right, which
                    looks better IMO, so we don't do it right now.
                    #}
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
